<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewRestaurant"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_restaurant_image" />

    <TextView
        android:id="@+id/textViewFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewRestaurant"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Food Name" />
    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFood"
        android:layout_toEndOf="@id/imageViewRestaurant"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="Category" />

    <TextView
        android:id="@+id/textViewFoodDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCategory"
        android:layout_toEndOf="@id/imageViewRestaurant"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="Food Description" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFoodDescription"
        android:layout_toEndOf="@id/imageViewRestaurant"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="Food Price" />

    <Button
        android:id="@+id/updateFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:text="Update"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
