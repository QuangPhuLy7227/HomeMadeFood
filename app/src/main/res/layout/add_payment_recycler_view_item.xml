<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="16dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/visa" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Card Number: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Displaying Card's Number" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:text="Expires: " />

        <TextView
            android:id="@+id/expiredDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Displaying Expired Date" />

    </LinearLayout>

    <TextView
        android:id="@+id/cardUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:textStyle="bold"
        android:text="User's Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-23dp"
            android:textSize="10sp"
            android:textColor="@color/red"
            android:text="Edit Card"
            android:backgroundTint="@android:color/transparent" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="15dp"
            android:background="@color/red" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-21dp"
            android:textSize="10sp"
            android:textColor="@color/red"
            android:text="Remove Card"
            android:backgroundTint="@android:color/transparent" />



    </LinearLayout>







</androidx.cardview.widget.CardView>